rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas de seguridad para usuarios autenticados
    
    // Perfiles de usuario - solo el propietario puede acceder
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Plantas - solo el propietario puede acceder
    match /plants/{plantId} {
      allow read, write: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
    }
    
    // Mensajes de chat de plantas - solo el propietario de la planta
    match /plants/{plantId}/messages/{messageId} {
      allow read, write: if request.auth != null 
        && get(/databases/$(database)/documents/plants/$(plantId)).data.userId == request.auth.uid;
    }
    
    // Notificaciones - solo el propietario
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
    }
    
    // Actividad de jardín - solo el propietario
    match /garden_activity/{activityId} {
      allow read, write: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
    }
    
    // Temporal: regla más permisiva para usuarios autenticados
    // REMOVER en producción después de verificar que las reglas específicas funcionan
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
